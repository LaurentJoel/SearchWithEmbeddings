# ===========================================
# SearchWithEmbeddings Environment Configuration
# ===========================================
# Copy this file to .env and fill in the values

# ----- Database (PostgreSQL) -----
POSTGRES_USER=cenadi
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=cenadi_search
DATABASE_URL=postgresql://cenadi:your_secure_password_here@postgres:5432/cenadi_search

# ----- Milvus Vector Database -----
MILVUS_HOST=milvus
MILVUS_PORT=19530
MILVUS_COLLECTION=cenadi_documents

# ----- Document Storage -----
UPLOAD_DIRECTORY=/app/uploads
DOCUMENTS_PATH=/documents

# ----- Authentication -----
NEXTAUTH_SECRET=generate_a_32_character_secret_here
NEXTAUTH_URL=http://localhost:3000

# ----- Python Indexer Service -----
INDEXER_HOST=indexer
INDEXER_PORT=8000

# ----- Embedding Model -----
EMBEDDING_MODEL=paraphrase-multilingual-MiniLM-L12-v2
EMBEDDING_DIMENSION=384

# ----- OCR Configuration -----
TESSERACT_LANGUAGES=fra+eng
OCR_DPI=300

# ----- Application -----
NODE_ENV=production
APP_PORT=3000

# ----- Logging -----
LOG_LEVEL=info
