# ==============================================================================
# Production Environment Variables
# ==============================================================================
# Copy this file to .env and fill in the values before deployment
# IMPORTANT: Never commit .env file to version control!
# ==============================================================================

# ==================== DATABASE ====================
POSTGRES_USER=cenadi_prod
POSTGRES_PASSWORD=YOUR_STRONG_PASSWORD_HERE_MIN_32_CHARS
POSTGRES_DB=cenadi_search

# ==================== AUTHENTICATION ====================
# Generate with: openssl rand -base64 64
NEXTAUTH_SECRET=YOUR_NEXTAUTH_SECRET_HERE_MIN_64_CHARS
NEXTAUTH_URL=https://your-domain.com

# ==================== MINIO (Object Storage) ====================
MINIO_ACCESS_KEY=YOUR_MINIO_ACCESS_KEY
MINIO_SECRET_KEY=YOUR_MINIO_SECRET_KEY_MIN_32_CHARS

# ==================== MILVUS ====================
MILVUS_COLLECTION=cenadi_documents

# ==================== INDEXER ====================
EMBEDDING_MODEL=paraphrase-multilingual-MiniLM-L12-v2
TESSERACT_LANGUAGES=fra+eng
LOG_LEVEL=warning

# ==================== PATHS ====================
UPLOAD_DIRECTORY=/opt/cenadi/documents
